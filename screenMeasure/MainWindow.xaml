<Window x:Class="screenMeasure.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:screenMeasure"
        mc:Ignorable="d"
        Title="Screen Measurer" Height="250" Width="400">
    <Grid>
        <StackPanel>
           <Label Content="Screen Measurer" FontSize="36" HorizontalContentAlignment="Center"/>
           <Button x:Name="btnMeasure" Margin="100,0" Content="Measure" FontSize="24" Click="BtnMeasure_OnClick" />
           <StackPanel Orientation="Horizontal" Margin="0,20" HorizontalAlignment="Stretch">
               <StackPanel HorizontalAlignment="Stretch">
                   <Label Content="Width" HorizontalContentAlignment="Center" Width="200"/>
                   <TextBlock x:Name="tbkWidth" Text="" HorizontalAlignment="Center" />
               </StackPanel>
               <StackPanel HorizontalAlignment="Stretch">
                   <Label Content="Height" HorizontalContentAlignment="Center" Width="200"/>
                   <TextBlock x:Name="tbkHeight" Text="" HorizontalAlignment="Center" />
               </StackPanel>
           </StackPanel>
        </StackPanel>
        
    </Grid>
</Window>
